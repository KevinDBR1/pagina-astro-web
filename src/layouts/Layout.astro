---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header>
			<div class="top-header container">
				<img
					src="https://http2.mlstatic.com/frontend-assets/ml-web-navigation/ui-navigation/6.6.73/mercadolibre/logo_large_25years_v2.png"
					alt=""
				/>
				<div class="input">
					<input placeholder="Busca lo que deseas aqui" />
					<button
						><svg
							xmlns="http://www.w3.org/2000/svg"
							fill="none"
							viewBox="0 0 24 24"
							stroke-width="1.5"
							stroke="currentColor"
							class="size-5"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z"
							></path>
						</svg>
					</button>
				</div>
				<div class="group relative inline-block">
					<a href="#" class="bg-green-500">publicidad</a>
					<div
						class="pt-3 w-32 group-hover:block hidden top-8 bg-red-500 absolute"
					>
						<div
							class="absolute rotate-45 -top-2 left-2 bg-red-500 size-4"
						>
						</div>
						opcion 1
					</div>
				</div>
			</div>
			<div class="group flex justify-between ">
				<div class="flex gap-[40px] items-center mt-6 ml-11">
					<div class="bg-#ffe600 flex">
						Categorias
						<svg
							xmlns="http://www.w3.org/2000/svg"
							fill="none"
							viewBox="0 0 24 24"
							stroke-width="1.5"
							stroke="currentColor"
							class="size-3.5 mt-1.5 ml-1"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								d="m19.5 8.25-7.5 7.5-7.5-7.5"></path>
						</svg>
					</div>
					<div class="bg-#ffe600 inline-block">
						Ofertas
					</div>
					<div class="bg-#ffe600 inline-block">
						Cupones
					</div>
					<div class="bg-#ffe600 inline-block">
						Supermercado
					</div>
					<div class="bg-#ffe600 inline-block">
						Moda
					</div>
					<div class="bg-#ffe600 inline-block">
						Vender
					</div>
					<div class="bg-#ffe600 inline-block">
						Ayuda/PQR
					</div>
				</div>
				<div class="flex gap-[40px] ml-10">
					<div class="bg-#ffe600 inline-block">
						Crea tu cuenta
					</div>
					<div class="bg-#ffe600 inline-block">
						Ingresa
					</div>
					<div class="bg-#ffe600 flex">
						Mis Compras
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5 ml-6">
							<path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 0 0-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 0 0-16.536-1.84M7.5 14.25 5.106 5.272M6 20.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Zm12.75 0a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z" />
						  </svg>
						  
					</div>
				</div>
			</div>
		</header>
		<div
			class="h-72 bg-gradient-to-b to-60% from-[#ffe600] to-[rgb(192, 189, 189)]"
		>
		</div>
		<div
			class="flex -my-20 h-60 gap-[10px] container max-w-[1200px] mx-auto"
		>
			<div class="min-w-24 grow rounded-md bg-white">1</div>
			<div class="min-w-24 grow rounded-md bg-white">2</div>
			<div class="min-w-24 grow rounded-md bg-white">3</div>
			<div class="min-w-24 grow rounded-md bg-white">4</div>
			<div class="min-w-24 grow rounded-md bg-white">5</div>
			<div class="min-w-24 grow rounded-md bg-white">6</div>
		</div>

		<div
			class="group transition-colors duration-150 hover:bg-blue-600 hover:cursor-pointer rounded inline-flex items-center px-4 py-2 text-white bg-blue-500"
		>
			<svg
				xmlns="http://www.w3.org/2000/svg"
				fill="none"
				viewBox="0 0 24 24"
				stroke-width="1.5"
				stroke="currentColor"
				class="size-4 mr-1 mt-1 group-hover:animate-spin"
			>
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99"
				></path>
			</svg>

			Presioname!
			<svg
				xmlns="http://www.w3.org/2000/svg"
				fill="none"
				viewBox="0 0 24 24"
				stroke-width="1.5"
				stroke="currentColor"
				class="size-4 mt-[4px] ml-1"
			>
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"></path>
			</svg>
		</div>
		<!--<slot /> -->
	</body>
</html>
<style>
	html,
	body {
		padding: 0;
		margin: 0;
		background-color: rgb(240, 227, 227);
	}
	header {
		padding-top: 10px;
		height: 80px;
		background-color: #ffe600;
	}
	header img {
		width: 120px;
	}

	header input {
		box-sizing: border-box;
		display: inline-block;
		width: 80%;
		height: 35px;
		padding: 10px 8px;
		border-top-left-radius: 3px;
		border-bottom-left-radius: 3px;
		border: none;
		/* border: 1px solid white; */
		outline: none;
	}

	header button {
		display: inline;
		height: 36px;
		width: 32px;
		border: none;
		background-color: #fff;
		border-top-right-radius: 3px;
		border-bottom-right-radius: 3px;
	}
	.input {
		display: flex;
		align-items: center;
	}
