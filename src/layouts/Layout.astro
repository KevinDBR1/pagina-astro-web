---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header>
			<div class="top-header">
				<img src="https://http2.mlstatic.com/frontend-assets/ml-web-navigation/ui-navigation/6.6.73/mercadolibre/logo_large_25years_v2.png" alt="">
				<div class="input">
					<input placeholder="Escribe algo y Encuentra"/>
					<button>

					</button>
					
				</div>
				<p>publicidad</p>
			</div>
		</header>
		<div class="banner">

		</div>
		<div class="cards container"> 
			<div class="card">
				1
			</div>
			<div class="card">
				2
			</div>
			<div class="card">
				3
			</div>
			<div class="card">
				4
			</div>
			<div class="card">
				5
			</div>
			<div class="card">
				6
			</div>
		</div>
		<!--<slot /> -->
	</body>
</html>
<style>
	html, body{
		padding: 0;
		margin: 0;
		background-color:rgb(221, 219, 219) ;
	}
	header{
		height: 80px;
		background: #fcf268;
		padding-top: 12px;
	}
	.header img{
		width: 120px;
	}
	.header input{
		box-sizing: border-box;
		display: inline;
		width: 100%;
		padding: 10px 8px;
		border-top-left-radius: 3px;
		border-bottom-left-radius: 3px;
		height: 36px;
		/*border: 1px solid rgb(223, 220, 220);*/
		outline:none;

	}

	.header button{
		display: inline;
		width: 32px;
		border: none;
		background: #fff;
		height: 36px;
		border-top-right-radius: 3px;
		border-bottom-right-radius: 3px;
	}

	.input{
		display: flex;
		align-items: center;
	}
	
	.banner{
		height: 280px;
		background: linear-gradient(to bottom, #fcf268 0%, #fcf268 60%, rgb(221, 219, 219) 100%);
		
	}
	.container{
		max-width: 1200px;
		margin: 0 auto;
		
	}

	.cards{
		display:flex;
		gap: 10px;
		margin-top:  -80px ;
		height: 240px;
	}

	.card{
		/*min-width: 180px;*/
		flex-grow: 1;
		background-color: rgb(255, 255, 255);
		border-radius: 6px;
	}

	.top-header {
		background-color: blue;
		column-count: 3;
		
	}

	

	

</style>
